<% @posts.each do |post| %>
  <%= link_to post, class: 'text-decoration-none' do %>
    <div class="card mb-3 bg-warning">
      <div class="card-body">
        <h5 class="card-title mb-1 text-dark"><%= post.title %></h5>
        <p class="text-dark mb-0"><%= post.content %></p>
      </div>
    </div>
  <% end %>
<% end %>








